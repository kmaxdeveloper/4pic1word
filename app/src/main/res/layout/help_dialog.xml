<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background6">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dismiss"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/back"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/letter1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/action_bar_style">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/search2"
                android:layout_marginStart="15dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_style"
                android:text="1 letter "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="10 "
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginEnd="45dp"
                android:fontFamily="@font/rubik_style"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/coin"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/letter1Ads"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/action_bar_style">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/search2"
                android:layout_marginStart="15dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_style"
                android:text="1 letter "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="1 "
                android:textSize="24sp"
                android:fontFamily="@font/rubik_style"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginEnd="50dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ads2"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/word1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/action_bar_style">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/search2"
                android:layout_marginStart="15dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_style"
                android:text="1 word "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="25 "
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginEnd="45dp"
                android:fontFamily="@font/rubik_style"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/coin"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/word1Ads"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/action_bar_style">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/search2"
                android:layout_marginStart="15dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_style"
                android:text="1 word "/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="1 "
                android:textSize="24sp"
                android:fontFamily="@font/rubik_style"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginEnd="50dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ads2"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"/>
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>